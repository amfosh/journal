<div class="card" style="width: 18rem;" id=<%= entry_path(entry.id)%>
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <div class="posted-by">Posted by <%= entry.user.username %></div>
    <h5 class="card-title"><%= truncate(entry.title, :length => 60) %></h5>
    <p class="card-text"><%= truncate(entry.content, :length => 60) %></p>
    <a href="#" class="btn btn-primary">Go Somewhere</a>
  </div>
</div>

